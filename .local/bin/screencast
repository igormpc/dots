#!/bin/sh

ffmpeg -y -f x11grab -framerate 10 -s 1600x900 -i :0.0+"1366x0" -f alsa -i default -r 10 -c:v h264 -crf 0 -preset ultrafast -c:a aac "$HOME/screencast-$(date '+%y%m%d-%H%M-%S').mp4"
#ffmpeg -y -f x11grab -framerate 10 -s "$(xdpyinfo | awk '/dimensions/ {print $2;}')" -i "$DISPLAY" -f alsa -i default -r 10 -c:v h264 -crf 0 -preset ultrafast -c:a aac "$HOME/screencast-$(date '+%y%m%d-%H%M-%S').mp4"

